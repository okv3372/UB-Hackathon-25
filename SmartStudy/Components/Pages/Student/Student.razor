@page "/{userId}/Class/{classId}/Student/{studentId}"
@using SmartStudy.Components.Pages   @* for <AssignmentListItem /> *@

<h1 class="text-center">Assignments</h1>

@if (string.IsNullOrWhiteSpace(ClassId) || string.IsNullOrWhiteSpace(StudentId))
{
    <p>Missing class or student context.</p>
}
else if (Assignments is null)
{
    <p>Loadingâ€¦</p>
}
else if (Assignments.Count == 0)
{
    <p>No assignments yet.</p>
}
else
{
    <div class="assignment-list">
        @foreach (var a in Assignments)
        {
            <AssignmentListItem
                AssignmentName="@a.Name"
                GradedFileName="@a.GradedFile"
                DetailPageUrl="@BuildDetailUrl(a.Id)" />
        }
    </div>
}
