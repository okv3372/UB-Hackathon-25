@page "/{userId}/Class/{classId}/Student/{studentId}"

<h1>Student</h1>

@if (!string.IsNullOrWhiteSpace(ClassId) && !string.IsNullOrWhiteSpace(StudentId))
{
	<p>Class ID: <strong>@ClassId</strong></p>
	<p>Student ID: <strong>@StudentId</strong></p>
}
else
{
	<p>Missing class or student context.</p>
}

<div class="mt-3">
	<h3>Assignments</h3>
	<button class="btn btn-secondary me-2" @onclick="OnAssignment1">Assignment 1</button>
	<button class="btn btn-secondary me-2" @onclick="OnAssignment2">Assignment 2</button>
	<button class="btn btn-secondary" @onclick="OnAssignment3">Assignment 3</button>
</div>
