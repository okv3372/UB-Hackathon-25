@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web

<div class="class-card"
     style="--accent:@Color"
     role="button"
     tabindex="0"
     aria-label="Open class @Name (@Id) by @Teacher"
     @onclick="() => OnOpen.InvokeAsync(Id)"
     @onkeydown="HandleKeyDown"
     @onkeydown:preventDefault>

    <div class="card-media">
        <img src="images/books.webp" alt="" />
        <!-- optional label chip (e.g., section) -->
        <!-- <span class="chip">Period 2</span> -->
    </div>

    <div class="card-body">
        <h5 class="title">@Name</h5>
        <p class="subtle">@Id</p>
        <p class="meta">
            <!-- tiny inline icon -->
            <svg viewBox="0 0 24 24" width="16" height="16" aria-hidden="true" class="i">
                <path d="M12 12a5 5 0 1 0-5-5 5 5 0 0 0 5 5Zm0 2c-4.418 0-8 2.239-8 5v1h16v-1c0-2.761-3.582-5-8-5Z" fill="currentColor"/>
            </svg>
            @Teacher
        </p>
    </div>
</div>

@code {
    [Parameter] public string Id { get; set; } = string.Empty;
    [Parameter] public string Name { get; set; } = string.Empty;
    [Parameter] public string Teacher { get; set; } = string.Empty;
    [Parameter] public string Color { get; set; } = "#4CAF50";
    [Parameter] public EventCallback<string> OnOpen { get; set; }

    private Task HandleKeyDown(KeyboardEventArgs e)
        => (e.Key == "Enter" || e.Key == " ")
           ? OnOpen.InvokeAsync(Id)
           : Task.CompletedTask;
}

<style>
/* Card shell */
.class-card{
    --radius: 14px;
    --shadow: 0 2px 6px rgba(0,0,0,.08);
    --shadow-hover: 0 10px 24px rgba(0,0,0,.12);
    position: relative;
    background: #fff;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    overflow: hidden; /* clips media & accent */
    cursor: pointer;
    transition: transform .16s ease, box-shadow .16s ease;
}

/* Accent strip */
.class-card::before{
    content:"";
    position:absolute;
    inset: 0 auto 0 0;
    width: 8px;
    background: linear-gradient(180deg, var(--accent), color-mix(in oklab, var(--accent), white 25%));
    border-top-left-radius: var(--radius);
    border-bottom-left-radius: var(--radius);
}

/* Lift + stronger shadow */
.class-card:hover,
.class-card:focus,
.class-card:focus-within{
    transform: translateY(-4px);
    box-shadow: var(--shadow-hover);
    outline: none;
}

/* Visible keyboard ring */
.class-card:focus-visible{
    box-shadow: var(--shadow-hover), 0 0 0 3px rgba(33,150,243,.35);
}

/* Media */
.card-media{
    position: relative;
    height: 136px;               /* consistent height across cards */
    overflow: hidden;
    border-top-left-radius: calc(var(--radius) - 2px);
    border-top-right-radius: calc(var(--radius) - 2px);
    margin-left: 8px;            /* keep clear of accent strip */
}
.card-media img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1);
    transition: transform .3s ease;
}
/* subtle zoom on hover */
.class-card:hover .card-media img{ transform: scale(1.03); }

/* Optional chip over media */
.chip{
    position: absolute; bottom: 10px; left: 12px;
    background: rgba(0,0,0,.6);
    color: #fff; font-size: .75rem; line-height: 1;
    padding: 6px 10px; border-radius: 999px;
    backdrop-filter: blur(3px);
}

/* Body */
.card-body{
    padding: 14px 16px 16px 16px;
    margin-left: 8px; /* align with accent gap */
}
.title{
    margin: 0 0 2px 0; font-weight: 700; letter-spacing: .2px;
}
.subtle{
    margin: 0 0 8px 0; color: #6b7280; font-size: .9rem;
}
.meta{
    margin: 0; color: #111827; font-size: .95rem; display:flex; align-items:center; gap:.5rem;
}
.meta .i{ opacity:.6; }

</style>
