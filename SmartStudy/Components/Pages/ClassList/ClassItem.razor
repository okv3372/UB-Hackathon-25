@using Microsoft.AspNetCore.Components

<div class="class-box" style="border-left: 6px solid @Color">
    <img class="confetti-top" src="images/confetti2.avif" alt="" />

    <h5 class="mt-3">@Name</h5>
    <p class="text-muted mb-1">@Id</p>
    <p>@Teacher</p>

    <div class="mt-auto pt-2">
        <button class="btn btn-primary" @onclick="() => OnOpen.InvokeAsync(Id)">Open Class</button>
    </div>
</div>

@code {
    [Parameter] public string Id { get; set; } = string.Empty;
    [Parameter] public string Name { get; set; } = string.Empty;
    [Parameter] public string Teacher { get; set; } = string.Empty;
    [Parameter] public string Color { get; set; } = "#4CAF50";
    [Parameter] public EventCallback<string> OnOpen { get; set; }
}

<style>
    .class-box {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        padding: 16px;
        display: flex;
        flex-direction: column;
        position: relative;
        width: 100%;
    }

    /* Confetti sits *inside* the box at the top */
    .confetti-top {
        width: 100%;
        height: 120px;
        object-fit: cover;
        margin: 0 auto;
        display: block;
    }
</style>
