@page "/{userId}/ClassList"
@using SmartStudy.Components.Pages.ClassList

<div class="container classlist-page">
    <header class="page-header">
        <h1 class="page-title">My Classes</h1>
    </header>

    @if (_isLoading)
    {
        <div class="row g-4">
            @for (var i = 0; i < 6; i++)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="skeleton-card"></div>
                </div>
            }
        </div>
    }
    else if (!string.IsNullOrWhiteSpace(_error))
    {
        <div class="alert alert-danger">@_error</div>
    }
    else if (_classes.Count == 0)
    {
        <div class="empty">
            <p>You’re not enrolled in any classes yet.</p>
        </div>
    }
    else
    {
        <div class="row g-4 cards-grid">
            @foreach (var c in _classes)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <ClassItem Id="@c.Id"
                               Name="@c.Name"
                               Teacher="@c.Teacher"
                               Color="@c.Color"
                               OnOpen="NavigateToClass" />
                </div>
            }
        </div>
    }
</div>

<style>
/* Page spacing:
   - margin-top gives breathing room after the breadcrumbs
   - margin-bottom separates title from the grid */
.classlist-page .page-header{
  padding-top: 20px;     /* instead of margin-top */
  padding-bottom: 2px;  /* instead of margin-bottom */ß
}


@@media (min-width: 768px){
  .classlist-page .page-header{
    margin-top: 20px;
    margin-bottom: 28px;
  }
}

.page-title {
  margin: 0;
  font-weight: 700;
  font-size: clamp(1.9rem, 1.1rem + 2vw, 2.6rem);
  letter-spacing: -0.025em;
  color: #004E89;
  opacity: 0;
  transform: translateY(8px);
  animation: fadeUp 0.35s ease-out forwards;
}

@@keyframes fadeUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}



/* Slight extra top space before the grid on small screens */
.cards-grid{
  margin-top: 2px;
}

/* Empty state */
.empty{
  text-align: center;
  color: #6b7280;
  padding: 60px 0;
  font-size: 1.1rem;
}

/* Skeletons */
.skeleton-card{
  height: 240px;
  border-radius: 18px;
  background: linear-gradient(110deg, #ececec 8%, #f5f5f5 18%, #ececec 33%);
  background-size: 200% 100%;
  animation: shimmer 1.4s ease infinite;
  border: none;
}

@@keyframes shimmer { to { background-position: -200% 0; } }

</style>
