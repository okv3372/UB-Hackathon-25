@page "/login"
@page "/"
<div class="login-container">
    <div class="company-header">
        <img src="/images/icons8-study-50.png" alt="SmartStudy Logo" class="company-logo" />
        <h2 class="company-name">SmartStudy</h2>
    </div>
    <div class="login-card">
        <h1 class="mb-3 text-center">Login</h1>
        <div class="mb-3">
            <div class="text-start">
                <label for="userId" class="form-label">Username</label>
            </div>
            <input id="userId" class="form-control" @bind="UserIdInput" placeholder="Enter your username" />
        </div>
        <div class="mb-4">
            <div class="text-start">
                <label for="password" class="form-label">Password</label>
            </div>
            <input id="password" type="password" class="form-control" @bind="PasswordInput" placeholder="Enter your password" />
        </div>
        <div class="text-center mt-4">
            <button class="btn btn-primary px-4" @onclick="GoToClassList">Login</button>
        </div>
        <div class="text-center mt-3">
            <small class="text-muted">
                Don't have an account? <a href="#" class="signup-link">Sign up</a>
            </small>
        </div>
    </div>
</div>
<style>
    /* Reset body margins that might affect centering */
    :root, body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        font-size: 16px; /* base for rem sizes */
    }

    /* Container fills viewport and centers content responsively */
    .login-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 2vh 2vw;
        position: fixed;
        inset: 0; /* shorthand for top:0;left:0;right:0;bottom:0; */
        background-image: url('/images/image.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        box-sizing: border-box;
    }

    /* Header (logo + name) scales with viewport */
    .company-header {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        margin-bottom: 2vh;
    }

    /* Use max-height in viewport units and relative width so it scales */
    .company-logo {
        height: 6vh;
        max-height: 64px; /* keep a reasonable cap on very tall screens */
        width: auto;
    }

    .company-name {
        margin: 0;
        font-size: 1.6rem; /* scales with root font-size */
        font-weight: 600;
        color: #004E89;
        transform: translateY(0.15rem) translateX(-0.25rem); /* small offset */
    }

    /* Card uses percentage / viewport widths with a sensible max-width */
    .login-card {
        width: min(92%, 36rem); /* prefer percent but limit width on large screens */
        padding: 3.5vh 3vw;     /* vertical padding scales with viewport height */
        border: 0.08rem solid #ddd;
        border-radius: 0.6rem;
        box-shadow: 0 0.4rem 1.2rem rgba(0,0,0,0.08);
        background-color: rgba(255,255,255,0.98);
        margin: 0 auto;
        box-sizing: border-box;
    }

    /* Inputs and labels use relative sizes */
    .form-label {
        font-size: 0.95rem;
    }

    .form-control {
        font-size: 1rem;
        padding: 0.65rem 0.8rem;
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.45rem rgba(13, 110, 253, 0.12);
    }

    .text-start {
        text-align: left !important;
        width: 100%;
    }

    .btn-primary {
        font-size: 1rem;
        padding: 0.6rem 1.1rem;
        border-radius: 0.4rem;
    }

    .signup-link {
        color: #0d6efd;
        text-decoration: none;
        font-size: 0.95rem;
    }

    .signup-link:hover {
        text-decoration: underline;
    }

    .text-muted {
        color: #6c757d;
        font-size: 0.9rem;
    }

    /* Spacing utility classes (keeps original markup working) */
    .mb-3 { margin-bottom: 1rem; }
    .mb-4 { margin-bottom: 1.25rem; }
    .mt-3 { margin-top: 0.75rem; }
    .mt-4 { margin-top: 1rem; }
    .text-center { text-align: center; }

    /* Responsive tweaks */
    @@media (max-width: 600px) {
        .company-logo { height: 5.5vh; max-height: 48px; }
        .company-name { font-size: 1.35rem; }
        .login-card { padding: 3vh 4vw; }
        .company-header { gap: 0.6rem; margin-bottom: 1.2vh; }
    }

    @@media (min-width: 1200px) {
        /* Slightly larger text and card padding on very wide screens */
        :root { font-size: 17px; }
        .login-card { padding: 4vh 4vw; }
        .company-name { font-size: 1.85rem; }
    }
</style>