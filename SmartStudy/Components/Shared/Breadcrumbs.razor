@namespace SmartStudy.Components.Shared
@using SmartStudy.Services
@inherits ComponentBase

<nav class="pretty-breadcrumbs-wrap" aria-label="Breadcrumb">
    <ol class="pretty-breadcrumbs">
        @if (Items is not null && Items.Count > 0)
        {
            @for (var i = 0; i < Items.Count; i++)
            {
                var item = Items[i];
                var isLast = i == Items.Count - 1;

                <li class="@(isLast ? "is-current" : null)">
                    @if (!isLast && !string.IsNullOrWhiteSpace(item.Url))
                    {
                        <a href="@item.Url">@item.Label</a>
                    }
                    else
                    {
                        <span>@item.Label</span>
                    }
                </li>

            }
        }
    </ol>
</nav>

@code {
    [Parameter] public IReadOnlyList<BreadcrumbItem> Items { get; set; } = Array.Empty<BreadcrumbItem>();
}